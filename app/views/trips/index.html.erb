<h1>Listing trips</h1>

<table>
  <tr>
    <th>Vehicle</th>
    <th>Date</th>
    <th>Distance</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.vehicle_id %></td>
    <td><%= trip.date %></td>
    <td><%= trip.distance %></td>
    <td><%= trip.comments %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

